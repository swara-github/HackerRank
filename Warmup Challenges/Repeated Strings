'use strict';

const fs = require('fs');

process.stdin.resume();
process.stdin.setEncoding('utf-8');

let inputString = '';
let currentLine = 0;

process.stdin.on('data', inputStdin => {
    inputString += inputStdin;
});

process.stdin.on('end', _ => {
    inputString = inputString.replace(/\s*$/, '')
        .split('\n')
        .map(str => str.replace(/\s*$/, ''));

    main();
});

function readLine() {
    return inputString[currentLine++];
}

// Complete the repeatedString function below.
function repeatedString(s, n) {
    let actuallength = n;
    let initialString = s;
    let currentString = s;

    if (initialString == 'a') {
        return actuallength;
}
    if (initialString.length <= actuallength){
       
        for (let i = initialString.length /*3*/ ; i <= actuallength /*10*/;)
        {
            currentString = initialString + currentString;
            i = i + initialString.length; 
                     
        }

    }

   let newString= currentString.substring(0, actuallength); // retreives first 10 elements
    
    let countA = newString.split('').filter(letter => letter=='a').length;

    return countA;
}

function main() {
    const ws = fs.createWriteStream(process.env.OUTPUT_PATH);

    const s = readLine();

    const n = parseInt(readLine(), 10);

    let result = repeatedString(s, n);

    ws.write(result + "\n");

    ws.end();
}
